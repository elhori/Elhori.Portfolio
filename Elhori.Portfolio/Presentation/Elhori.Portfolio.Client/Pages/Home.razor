@page "/"
@using Elhori.Portfolio.Client.Layout

@layout EmptyLayout

<PageTitle>Home</PageTitle>

<style>
    body {
        font-family: 'Fira Code', monospace;
        background-color: #101010;
        color: #dcdcdc;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }
</style>

<header class="container">
    <h1>Elhori</h1>
    <nav>
        <a href="#about">About</a>
        <a href="#skills">Skills</a>
        <a href="#projects">Projects</a>
        <a href="#contact">Contact</a>
    </nav>
</header>

<section id="about" class="container intro">
    <h2>About Me</h2>
    <p>
        @_info.AboutMe
    </p>
</section>

<section id="skills" class="container skills">
    <h2>Skills</h2>
    @foreach (var skill in _skills.Results)
    {
        <div class="skill"><i class="@skill.Icon"></i> @skill.Name</div>
    }
</section>

<section id="projects" class="container projects">
    <h2>Projects</h2>
    @foreach (var project in _projects.Results)
    {
        <div class="project">
            <h3>@project.Name</h3>
            <p>@project.Description</p>
        </div>
    }
</section>

<section id="contact" class="container contact">
    <h2>Contact</h2>
    <a href="@_info.GithubUrl" target="_blank"><i class="fab fa-github"></i> GitHub</a>
    <a href="@_info.LinkedInUrl" target="_blank"><i class="fab fa-linkedin"></i> LinkedIn</a>
    <a href="mailto:@(_info.Email)"><i class="fas fa-envelope"></i> Email</a>
</section>

<footer>
    <p>&copy; @DateTime.Now.Year CodeCrafters Studio. All rights reserved.</p>
</footer>